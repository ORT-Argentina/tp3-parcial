<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.home">

    <RelativeLayout
        android:id="@+id/titulo_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tVBienvenido"
            android:layout_width="165dp"
            android:layout_height="27dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="59dp"
            android:fontFamily="@font/poppins"
            android:text="Listado disponible"
            android:textSize="18dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="59dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_baseline_search_24" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botonera_sup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/boton_all"
            style="@style/buttonDefault"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:text="All"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            android:textSize="14dp"/>

        <Button
            android:id="@+id/boton_pizza"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/pizza_slice1"
            android:text="Pizza"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/boton_burger"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/hamburger1"
            android:text="Burgers"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/boton_taco"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/taco1"
            android:text="Tacos"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="@color/white"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lista_comidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/big_mouth_burger_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/rectangle_burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle11"/>

            <LinearLayout
                android:id="@+id/big_mouth_burger_inner"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/burger_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="Big Mouth Burgers"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burger_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="American food"/>

                <LinearLayout
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/burger_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="4.6"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/estrella1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <!-- ITEM 2 -->

        <LinearLayout
            android:id="@+id/big_mouth_burger_outer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/rectangle_burger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle12"/>

            <LinearLayout
                android:id="@+id/big_mouth_burger_inner2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/burger_titulo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="Pizzeria La Farola"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burger_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="Pizza"/>


                <LinearLayout
                    android:id="@+id/rating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/burger_rating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="4.8"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/estrella2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart2"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <!-- ITEM 3 -->

        <LinearLayout
            android:id="@+id/big_mouth_burger_outer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/rectangle_burger3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle14"/>

            <LinearLayout
                android:id="@+id/big_mouth_burger_inner3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center">



                <TextView
                    android:id="@+id/burger_titulo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="Sushi Me"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burger_desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAllCaps="false"
                    android:text="Japanese food"/>


                <LinearLayout
                    android:id="@+id/rating3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/burger_rating3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="4.4"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/estrella3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart2"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>