<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.orderScreen">

    <!-- PUTER DRAWER -->

    <LinearLayout
        android:id="@+id/outer_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto_restaurant"
            android:layout_width="match_parent"
            android:layout_height="392dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-15dp"
            android:src="@drawable/restaurantphoto"/>

        <LinearLayout
            android:id="@+id/inner_drawer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/drawer_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizzeria La Farola"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_location_on_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Av. Francisco Beiró 5201"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wait_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_access_time_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 Minutos - Tiempo entrega"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menús"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/big_mouth_burger_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/rectangle_burger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle10"/>

                <LinearLayout
                    android:id="@+id/big_mouth_burger_inner"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/burger_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="Cheese Nachos"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/burger_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="$3.00"/>



                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/big_mouth_burger_outer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/rectangle_burger2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle10"/>

                <LinearLayout
                    android:id="@+id/big_mouth_burger_inner2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/burger_titulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="Veggie Burrito"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/burger_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textAllCaps="false"
                        android:text="$8.00"/>


                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_check_24"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>